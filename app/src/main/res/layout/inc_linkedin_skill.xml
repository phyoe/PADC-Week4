<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_medium_2">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginLeft="@dimen/margin_medium_2"
        android:layout_marginRight="@dimen/margin_medium_2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bar_blue"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#018ccf" />

            <TextView
                android:id="@+id/tv_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bar_blue"
                android:layout_gravity="center"
                android:gravity="left"
                android:padding="@dimen/margin_medium_2"
                android:text="@string/linkedin_banner"
                android:textColor="#666"
                android:textSize="@dimen/text_regular_2x" />

            <ImageView
                android:id="@+id/img_close"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/bar_blue"
                android:layout_marginRight="@dimen/margin_medium_2"
                android:layout_marginTop="@dimen/margin_medium_2"
                android:src="@drawable/ic_close_24dp" />

            <ImageView
                android:id="@+id/img_skill"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/tv_banner"
                android:layout_marginBottom="@dimen/margin_medium_2"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_marginRight="@dimen/margin_medium_2"
                android:src="@drawable/ic_school_24dp" />

            <TextView
                android:id="@+id/tv_skill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_banner"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_medium_2"
                android:layout_toRightOf="@id/img_skill"
                android:gravity="left"
                android:text="@string/linkedin_skill"
                android:textColor="#666"
                android:textSize="@dimen/text_regular_2x"
                android:textStyle="bold" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>