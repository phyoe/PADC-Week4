<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF"
                android:layout_marginBottom="@dimen/margin_medium"
                android:layout_marginLeft="@dimen/margin_medium_2"
                android:layout_marginRight="@dimen/margin_medium_2"
                android:layout_marginTop="@dimen/margin_xxxlarge">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="0dp"
                        android:clickable="true"
                        android:gravity="right"
                        android:paddingRight="@dimen/margin_medium"
                        android:paddingTop="@dimen/margin_medium"
                        android:src="@drawable/ic_edit_blue_24dp" />

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_xxlarge"
                        android:gravity="center"
                        android:text="@string/linkedin_name"
                        android:textColor="#222"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/tv_user_post"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/linkedin_user_position"
                        android:textColor="#666"
                        android:textSize="@dimen/text_regular"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_degree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/linkedin_degree"
                        android:textColor="#666"
                        android:textSize="@dimen/text_regular" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_job_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:text="@string/linkedin_job_address"
                            android:textColor="#666"
                            android:textSize="@dimen/text_regular" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:foregroundGravity="center_horizontal"
                            android:src="@drawable/ic_people_black_24dp" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_xlarge"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="@dimen/margin_xlarge"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:paddingLeft="@dimen/margin_xxlarge"
                        android:paddingRight="@dimen/margin_xxlarge"
                        android:text="@string/linkedin_profile"
                        android:textColor="#666"
                        android:textSize="@dimen/text_regular" />
                </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/img_linkedin_user"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:layout_gravity="center_horizontal"
            android:foregroundGravity="center_horizontal"
            android:src="@drawable/user_logo" />

    </RelativeLayout>

</FrameLayout>